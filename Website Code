            text-align: center; /* Center all contents in the container */
        }
 
        h1 {
            font-size: 30px;
            text-decoration: underline;
        }
 
        p, .status, .status-vacant, .status-occupied {
            font-size: 20px;
        }
 
        .status {
            font-weight: bold;
        }
 
        .status-vacant {
            color: green;
        }
 
        .status-occupied {
            color: red;
        }
 
        .parking-slot {
            width: 100px;
            height: 150px;
            margin: 10px;
            border: 2px solid #000;
            background-color: white;
            display: inline-block;
        }
 
        .status-text {
            font-size: 24px;
            text-decoration: underline;
        }
 
