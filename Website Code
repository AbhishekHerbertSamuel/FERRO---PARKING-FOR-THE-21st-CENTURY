<body>
    <div class="container">
        <h1>Smart Parking System</h1>
        <p>Welcome!</p>
        <p>Slot Status Detection Application</p>
        <div class="index">
            <p class="status">Index:</p>
            <p class="status status-occupied">Red - Occupied</p>
            <p class="status status-vacant">Green - Vacant</p>
        </div>
        <div class="parking-slot" id="slot"></div>
        <p class="status-text">Status - <span id="status">Unknown</span></p>
        <div class="toggle-buttons">
            <button onclick="setVacant()">Set Vacant</button>
            <button onclick="setOccupied()">Set Occupied</button>
        </div>
    </div>
 
    <script>
        function checkParkingStatus(isOccupied) {
            const slot = document.getElementById("slot");
            const statusElement = document.getElementById("status");
 
            if (isOccupied) {
                slot.style.backgroundColor = 'red';
                statusElement.textContent = 'Occupied';
                statusElement.classList.remove('status-vacant');
                statusElement.classList.add('status-occupied');
            } else {
                slot.style.backgroundColor = 'green';
                statusElement.textContent = 'Vacant';
                statusElement.classList.remove('status-occupied');
                statusElement.classList.add('status-vacant');
            }
        }
 
        // Initial status: Vacant
        checkParkingStatus(false);
 
        // Function to set status to Vacant
        function setVacant() {
            checkParkingStatus(false); // Set to Vacant
        }
 
        // Function to set status to Occupied
        function setOccupied() {
            checkParkingStatus(true); // Set to Occupied
        }
    </script>
</body>
 
